icon-size = 20px
icon-gap = 25px

article
  margin 20px 0 40px 0
  &.page
    padding-left 0px
    .icon
      display none
    h4
      color #999
      font-size 1.5em
    ul
      list-style none
      li
        margin-bottom 5px
      a
        color #484848
        font-size 14px
        -webkit-transition all 0.3s linear
        -moz-transition all 0.3s linear
        -o-transition all 0.3s linear
        transition all 0.3s linear
        &:hover
          color #d2d2d2
          margin-left 20px
          
  &.post
    .icon
      &:before
        font-family font-icon
        content '\f15c'

  &.photo
    .icon
      &:before
        font-family font-icon
        content '\f030'

  &.link
    .icon
      &:before
        font-family font-icon
        content '\f0c1'

    .title
      a
        &:after
          content '\f08e'
          color color-meta
          font 12px font-icon
          padding-left 10px
          vertical-align super

  .post-content
    position relative

  .gallery
    overflow hidden
    position relative
    &:hover
      img
        -webkit-transform: scale(1.1, 1.1)
        -moz-transform: scale(1.1, 1.1)
        -o-transform: scale(1.1, 1.1)
        -ms-transform: scale(1.1, 1.1)
        transform: scale(1.1, 1.1)

      .control
        opacity 1

    @media screen and (max-width:580px)
      &:hover
        img
          -webkit-transform none
          -moz-transform none
          -o-transform none
          -ms-transform none
          transform none
          -webkit-transition none
          -moz-transition none
          -o-transition none
          -ms-transition none
          transition none

    img
      min-width 100%
      max-width 100%
      height auto
      position absolute
      top 0
      left 0
      opacity 0
      -ms-filter  "progid:DXImageTransform.Microsoft.Alpha(Opacity=0)"
      -webkit-transition all 0.8s
      -moz-transition all 0.8s
      -o-transition all 0.8s
      -ms-transition all 0.8s
      transition all 0.8s
      
      

    .control
      opacity 0
      transition 0.3s

    .prev, .next
      position absolute
      top 0
      width 50%
      height 100%
      cursor pointer
      &:before
        position absolute
        font 24px/1 font-icon
        text-align center
        width 24px
        text-shadow 0 0 15px rgba(0,0,0,0.5)
        color #fff
        margin-top -12px
        top 50%

    .prev
      left 0
      &:before
        font-family font-icon
        content '\f053'
        left 10px

    .next
      right 0
      &:before
        font-family font-icon
        content '\f054'
        right 10px

  header
    .icon
      width icon-size
      height icon-size
      margin-right icon-gap
      position absolute
      top: -4px;
      left: 0px;
      color color-link
      &:before
        position absolute
        font 15px font-icon    
        top 2px
        left 0 
        width 20px
        text-align center

    time
      color color-meta
      font 0.9em font-title
      margin-bottom 5px
      display block
      line-height 1
      margin-left 20px
      a
        color color-meta
        &:hover
          color color-hover
          text-decoration none

    .title
      font-weight normal
      font-size 30px
      margin: 10px 0px
      color rgb(37, 143, 184)
      a
        color color-link
        &:hover
          color color-hover
          text-decoration none

        &.comment-link
          &:before
            content '\f075'


  .entry
    text-align justify
    line-height 1.6

    p, blockquote, ul, ol, dl, table, iframe, h3, h4, h5, h6, .video-container
      margin-top 15px

    p
      margin 20px 0
      font-size 16px
      line-height 25px

    blockquote
      border-top 1px solid color-border
      border-bottom 1px solid color-border
      font-style italic
      font-family font-serif
      font-size 1.2em
      padding 0 30px 15px
      text-align center
      footer
        border-top none
        font-size 0.8em
        line-height 1
        margin 20px 0 0
        padding-top 0
        cite
          &:before
            content 'â€”'
            color #ccc
            padding 0 0.5em

    code, pre
      font-family font-mono

    code
      background #eee
      color #666
      padding 0 5px
      margin 0 2px
      font-size 0.9em
      border 1px solid color-border
      border-radius 3px

    pre
      background #eee
      border 1px solid color-border
      margin-top 15px
      overflow auto
      padding 7px 15px
      border-radius 2px
      code
        background none
        padding 0
        margin 0
        border none
        border-radius 0

    ul, ol, dl
      margin-left 20px
      ul, ol, dl
        margin-top 0

    h1, h2
      padding-bottom 10px
      margin-top 20px



    img, video
      max-width 100%
      height auto
      border none

    iframe
      border none

    .caption
      display block
      margin 5px 0
      color color-meta
      position relative
      font-size 0.9em
      i
        margin-right 10px

    .video-container
      position relative
      padding-bottom 56.25%
      padding-top 30px
      height 0
      overflow hidden
      iframe, object, embed
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        margin-top 0

    .pullquote
      float right
      border none
      padding 0
      margin 1em 0 0.5em 1.5em
      text-align left
      width 45%
      font-size 1.5em

  #profile
    padding 30px 0
    background rgb(249, 249, 249)
    border-bottom 1px solid rgb(221, 221, 221)
    color rgb(102, 102, 102)

  footer
    margin-top 15px
    padding-top 10px
    color color-meta
    font-size 0.9em
    line-height 16px
    position relative
    min-height 16px
    a
      color color-meta
      &:hover
        color color-link
        text-decoration none
      &:before
        padding-right 10px
        vertical-align middle


      &.comment-link
        &:before
          content '\f075'

    .categories, .tags
      position relative
      margin 5px 0
      a
        color color-meta
        &:hover 
          color color-link
